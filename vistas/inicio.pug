doctype html
html(lang="es")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet", href="/CSS/style.css")
    link(rel="shortcut icon", href="/IMAGEN/mega-icon.svg", type="image/x-icon")
    title Login
  body
    .login-container
      .logo
        img(src="/IMAGEN/images.png", alt="MEGA", width="100")
      h2 Iniciar sesión
      form(action="/api/users/login", method="POST")
        input(type="email", class="input-field", placeholder="Correo electrónico", required)
        input(type="password", class="input-field", placeholder="Contraseña", required)
        button(type="submit", class="login-button") Iniciar sesión
      .footer-text
        p ¿No tienes cuenta? 
          a(href="/registro") Crear cuenta
        p 
          a(href="#">¿Olvidaste tu contraseña?</a)
    
    script(src="/JS/registro.js") 